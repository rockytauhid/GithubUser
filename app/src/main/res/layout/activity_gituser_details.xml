<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_product_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GitUserDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_item_avatar"
            tools:src="@tools:sample/avatars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/user_photo"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_item_name"
            tools:text="Homer Simpsons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textSize="32sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp">

            <TableRow
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_weight="3"
                    android:text="@string/text_username" />

                <TextView
                    android:id="@+id/tv_item_username"
                    tools:text="hsimpsons"
                    android:layout_weight="7" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_weight="3"
                    android:text="@string/text_company" />

                <TextView
                    android:id="@+id/tv_item_company"
                    tools:text="Nuclear Power Plant"
                    android:layout_weight="7" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_weight="3"
                    android:text="@string/text_location" />

                <TextView
                    android:id="@+id/tv_item_location"
                    tools:text="Springfield"
                    android:layout_weight="7" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_weight="3"
                    android:text="@string/text_repository" />

                <TextView
                    android:id="@+id/tv_item_repository"
                    tools:text="8"
                    android:layout_weight="7" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_weight="3"
                    android:text="@string/text_follower" />

                <TextView
                    android:id="@+id/tv_item_follower"
                    tools:text="666"
                    android:layout_weight="7" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_weight="3"
                    android:text="@string/text_following" />

                <TextView
                    android:id="@+id/tv_item_following"
                    tools:text="99"
                    android:layout_weight="7" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/btn_set_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_share" />
    </LinearLayout>
</ScrollView>